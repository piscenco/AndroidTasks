<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".PersonDetailActivity">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card1"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:layout_marginLeft="@dimen/medium_margin_size"
        android:layout_marginTop="@dimen/small_margin_size"
        android:layout_marginRight="@dimen/medium_margin_size"
        android:clickable="true"
        android:scaleX="1"
        android:focusable="true"
        >
        <RelativeLayout android:layout_height="match_parent"
            android:layout_width="match_parent"

            >

            <TextView
                android:id="@+id/personNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/medium_margin_size"
                android:layout_marginTop="@dimen/medium_margin_size"
                android:layout_toEndOf="@+id/flowerImage1"
                android:text="@string/date1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/medium_text_size"
                />

            <TextView
                android:id="@+id/flower_dicr_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/personNameTextView"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="@dimen/medium_margin_size"
                android:layout_marginTop="@dimen/small_margin_size"
                android:layout_marginBottom="@dimen/medium_margin_size"
                android:layout_toEndOf="@+id/flowerImage1"
                android:text="@string/large_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/text_descr_size"
                android:ellipsize="end"
                android:maxLines="4"
                />

            <ImageView
                android:id="@+id/flowerImage1"
                android:layout_width="@dimen/card_img_size"
                android:layout_height="@dimen/card_img_size"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/medium_margin_size"
                android:layout_marginTop="@dimen/medium_margin_size"
                android:layout_marginBottom="@dimen/medium_margin_size"
                android:foregroundGravity="center_vertical"
                app:srcCompat="@drawable/flower_small"
                android:contentDescription="@string/img_descr"
                android:layout_gravity="center_vertical"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
